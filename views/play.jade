              a(href = "/play/twinkle").full-fit.abs.link            	
            .play-box-text-holder           
                h4.heading.play-box-title Twinkle
                p.reading.play-box-blurb Sit back and watch the night sky!
      .row           
        .col-md-6.text-right    
          .play-box.light
            .img.img-back.play-box-thumbnail.full-fit(style = 'background-image: url("../images/play-thumbnails/balls.png")')
